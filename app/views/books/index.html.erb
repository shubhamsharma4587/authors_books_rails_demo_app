<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= link_to "Authors", authors_path, class: 'resource-links' %>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Book title</th>
      <th>Authors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_id %></td>
        <td><%= book.book_title %></td>
        <td><%= book.authors.map(&:first_name).join(", ") %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
